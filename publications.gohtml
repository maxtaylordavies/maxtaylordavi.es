<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Publications</title>
    <link rel="stylesheet" href="/styles/publications.css">
    <link rel="stylesheet" href="/styles/tags.css">
    <style>
        html {
            background: {{ .Theme.Background }};
            color: {{ .Theme.Color }};
        }
        .title {
            border-bottom-color: {{ .Theme.Color }}
        }
        .nav-link {
            background: {{ .Theme.Color }}
        }
    </style>
</head>
<body>
<div class="container">
    <div class='nav-links'>
        <a class='nav-link posts' href='/?theme={{ .Theme.Name }}'>home</a>
        {{if .Filtered}}
            <a class='nav-link' href='/publications?theme={{ .Theme.Name }}'>all</a>
        {{end}}
    </div>
    <div class="body">
        <p class="title">{{.Title}}</p>
        <ul class="list">
            {{$theme := .Theme.Name}}
            {{range .Publications}}
                <span class="year">{{.Year}}</span>
                {{range .Pubs}}
                    <div class="publication">
                        <a class="publication-link" href="{{.URL}}" target="_blank">{{.Title}}</a>
                        <span class="publication-authors">{{.Authors}}</span>
                        <i class="publication-venue">{{.Venue}}</i>
                        <ul class="tags">
                            {{range .Tags}}
                                <a href="/publications?tag={{.}}&theme={{$theme}}" class="tag {{.}}">{{.}}</a>
                            {{end}}
                        </ul>
                    </div>
                {{end}}
            {{end}}
        </ul>
    </div>
</div>
</body>
</html>
